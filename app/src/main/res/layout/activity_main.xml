<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Bienvenido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/teito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Ingrese ExpresiÃ³n"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/n2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/n4"
        app:layout_constraintStart_toStartOf="@+id/n4"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/n5"
        app:layout_constraintStart_toStartOf="@+id/n5"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/n6"
        app:layout_constraintStart_toStartOf="@+id/n6"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintTop_toTopOf="@+id/n5"
        app:layout_constraintStart_toEndOf="@+id/n5"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintTop_toTopOf="@+id/n5"
        app:layout_constraintEnd_toStartOf="@+id/n5"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@+id/n4"
        app:layout_constraintStart_toStartOf="@+id/n4"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/n5"
        app:layout_constraintStart_toStartOf="@+id/n5"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintTop_toBottomOf="@+id/n6"
        app:layout_constraintStart_toStartOf="@+id/n6"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/n0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/n8"
        app:layout_constraintStart_toStartOf="@+id/n8"
        />
    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/n0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bSus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bEq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>